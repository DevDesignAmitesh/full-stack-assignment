{
  "name": "full-stack-assignment",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "build:fe": "cd apps/client && bun run build",
    "start:fe": "cd apps/client && bun run start",
    "start:be": "cd apps/server && bun run start",
    "build:be": "bun i && cd packages/db && npx drizzle-kit generate --config='./src/drizzle.config.ts' && npx drizzle-kit migrate --config='./src/drizzle.config.ts' && bun run seed",
    "generate:db": "cd packages/db && npx drizzle-kit generate --config='./src/drizzle.config.ts'",
    "migrate:db": "cd packages/db && npx drizzle-kit migrate --config='./src/drizzle.config.ts'"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.3",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
